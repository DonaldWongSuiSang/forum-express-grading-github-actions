<div class="container col-md-12 d-flex bg-light">
  <div class="col-md-4">
    <img src="{{user.image}}" alt="User image" class="img-fluid border">
  </div>
  <div class="col-md-8 m-3">
    <h1>{{user.name}}</h1>
    <div class="col-md-4">
      <div class="well">
        <ul class="list-unstyled">
        <li><strong>Email:</strong> {{user.email}}</li>
        <li><a class="btn btn-outline-primary" href="/users/{{user.id}}/edit">edit</a></li>
        </ul>
      </div>
    </div>
  </div>
</div>
<a class="btn btn-outline-secondary" href="javascript:history.back()">Back</a>
